<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.malinin.dmitriy.android.dragonslayer" >
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.OptionsActivity"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".activities.AboutActivity"
            android:label="@string/title_activity_about"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Base.Theme.AppCompat.Dialog" >
        </activity>
        <activity
            android:name=".activities.PlayerActivity"
            android:label="@string/title_activity_player" >
        </activity>
        <activity
            android:name=".activities.CreatePlayer"
            android:label="@string/title_activity_create_player"
            android:parentActivityName=".activities.OptionsActivity" >
        </activity>
    </application>

</manifest>
